
//- ヘッダー
md-toolbar#header(ng-controller="HeaderController")
	.md-toolbar-tools
		//- サイドメニューを開くボタン
		md-button#toggle-side-nav.md-icon-button(ng-click="toggleSideNav()" ng-hide="isOpenRight()" aria-label="Menu")
			md-icon.material-icons menu
		//- サービス名。ロゴ
		h2
			span {{projectName}}
			
		h2 >
		
		img(src="img/logo.png" height="47px" style="left: 50%;position: absolute;transform: translateX(-50%)")
		//- span.vertical-line
		//- タイトル
		h2
			span {{screenName}}
		
		span(flex)
		
		
		md-button#build-download(class="md-primary" aria-label="Run" ng-click="buildDownload($event)") 
			md-icon.material-icons file_download
		
		//- 実行
		md-button#run-fab(class="md-primary" aria-label="Run" ng-click="run($event)") 
			md-icon.material-icons play_arrow
			
		//- 保存
		md-button#save-fab(class="md-fab md-primary" aria-label="Run" ng-click="save($event)") 
			md-icon.material-icons save
			
#editor(layout="row")
	
	#progress(layout="column" ng-show="progress.isLoading")
		img(src="http://assets.materialup.com/uploads/d0b393f6-3975-48dd-b7ca-bf0289187c6e/preview")
		md-progress-linear(md-mode="determinate" value="{{progress.determinateValue}}")
		
	
	#mode-changer(layout="column")
		
		md-button#changeScreen.md-icon-button.md-primary(ng-click="changeScreen()")
			md-icon.material-icons content_copy
	
		md-button.selected.md-icon-button(ng-repeat="(name, modeObj) in modeList" ng-click="changeMode(name)" ng-class="{'mode-icon-active': name==mode}" aria-label="ModeIcon")
			md-icon.material-icons {{modeObj.icon}}

	#left-zone.editor-card.flex
		.ui-view-fade(ui-view="left")

	//- #screen-zone-wrapper(ng-style="{marginRight: marginRight}" ng-controller="ScreenController")
	//- 	#screen-zone(ng-style = "{transform: 'scale(' + screenScaleRatio + ')'}")
	//- 		#screen-frame
	//- 			#screen
					

	#screen-wrapper
		#screen-zone.marvel-device.iphone6.silver(ng-controller="ScreenController" ng-style="{transform: 'scale(' + screenScaleRatio + ')', marginRight: marginRight}")
			.top-bar
			.sleep
			.volume
			.camera
			.sensor
			.speaker
			#screen.screen
			.home
			.bottom-bar
			
		
		div(layout="column")#template-preview-wrapper
			md-card#template-preview(layout="column" layout-align="center center")
		
			

	#right-zone.editor-card.flex
		.ui-view-fade(ui-view="right")
	
	
		
		
		
			
